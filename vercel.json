{
  "framework": "nextjs",
  "buildCommand": "npm run build:next",
  "devCommand": "npm run dev:next",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    }
  ],
  "regions": ["iad1"]
}