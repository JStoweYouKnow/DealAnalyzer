# Example environment variables for DealAnalyzer

# Clerk Authentication (Required for Next.js app)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# Convex Database (Required for Next.js app)
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOYMENT=prod:your-deployment-name

# OpenAI (Optional - enables AI analysis features)
OPENAI_API_KEY=sk-your_openai_key_here

# RentCast API (Optional - enables rental comps)
RENTCAST_API_KEY=your_rentcast_key_here

# Market Intelligence APIs (Optional - enables live market data)
ATTOM_API_KEY=your_attom_api_key_here              # Attom Data API - 1,000 free calls/month
CENSUS_API_KEY=your_census_api_key_here            # US Census Bureau API - unlimited free
WALKSCORE_API_KEY=your_walkscore_api_key_here      # Walk Score API - 5,000 free calls/day

# Gmail OAuth (Optional - enables email parsing)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3002/api/gmail-callback

# Legacy Session (for old Express server)
SESSION_SECRET=your_session_secret
REDIS_URL=redis://127.0.0.1:6379

# Firebase (Optional - for Firebase features)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Legacy Vite variables (for old client)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# NEW FEATURES - Email Services (choose one for weekly digest feature)
RESEND_API_KEY=                    # Resend (recommended for simplicity)
SENDGRID_API_KEY=                  # SendGrid
MAILGUN_API_KEY=                   # Mailgun

# NEW FEATURES - Cron Job Security
CRON_SECRET=                       # Generate a random secret for cron authentication

# SERVERLESS OPTIMIZATIONS - Vercel KV (Redis) for caching
KV_REST_API_URL=                   # Vercel KV REST API URL (auto-generated in Vercel dashboard)
KV_REST_API_TOKEN=                 # Vercel KV REST API Token (auto-generated in Vercel dashboard)

# SERVERLESS OPTIMIZATIONS - Vercel Blob Storage for files
BLOB_READ_WRITE_TOKEN=             # Vercel Blob Storage token (auto-generated in Vercel dashboard)
